<!-- latest start -->
<section class="pb-4 pt-4">
  <section class="d-flex mb-2 align-items-center">
    <h2>This weeks Emotions</h2>
    <a href="/explore-latest" class="ms-auto">View More</a>
  </section>

  <section class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
   <!-- creates link using emotion route to details created under emotion.ejs -->
   <% if(feelings !='') { %>
    <% feelings.LatestEmotion.forEach(function(emotion, index){ %>
        <!-- uses the id as the link to the indivial emotion by id -->
    <a href="/emotion/<%= emotion._id %>" class="col text-center category_link">
      <section class="category__img category__img--large shadow">
        <img src="/uploads/<%= emotion.image %>" alt="<%= emotion.name %>" loading="lazy" />
      </section>
      <section class="pt-1"><%= emotion.name %></section>
    </a>

    <% }) %>
    <% } else { %>
      <p>No items found.</p>
    <% } %>
  </section>
</section>



<!-- latest end -->

