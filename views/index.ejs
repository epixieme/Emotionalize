<!-- show all emotion categories on homepage-->
<!-- Categories Start -->

<section class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    <!-- uses categories from emotionsController which uses the model interface to the db in Category.js -->
    <% if(categories !='') { %>
        <% categories.forEach(function(category, i){ %>
            <!-- href creates a route for the categories to provide the option display all the files or just one of the files -->
    <a href="/categories/<%- category.name %>" class="col text-center category_link">
    <section class="category__img shadow">
      <img src="img/<%- category.image %>" alt="<%- category.name %>" loading="lazy" />
    </section>
    <section class="pt-1"><%- category.name %></section>
  </a>
  <% }) %>
  <% } %>
<!-- links to all moods when clicked on -->
  <a href="/categories" class="col text-center category_link">
    <section class="category__img shadow">
      <img src="img/allemotions.jpg" alt="All Moods" loading="lazy" />
    </section>
    <section class="pt-1">All emotions</section>
  </a>
</section>

<!-- Categories End -->

